<div class="author">
    <h1 class="author__heading"> Hi, I am Ritesh.</h1>
    <p class="Uthor__body"> Software Developer and Blogger </p>
</div>
<img src="/img/bannerc.jpg" alt="person looking out throught the window" class="hero-image">

<section class="articles">
    <h2 class="articles__heading">Latest Blogs</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>  
         
        
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>

        <% }) %>
    </ul>
    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

    

</section>